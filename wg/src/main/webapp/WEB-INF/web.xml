<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<!-- Nome da aplicação -->
	<display-name>WebGerente</display-name>

	<!-- Página principal -->
	<welcome-file-list>
		<welcome-file>pages/inicio.xhtml</welcome-file>
	</welcome-file-list>

	<!-- Estágio do Projeto -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Configuração do JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<!-- Tema do Primefaces -->
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>bootstrap</param-value>
		<!-- <param-value>casablanca</param-value> -->
		<!-- <param-value>cupertino</param-value> -->
		<!-- <param-value>flick</param-value> -->
		<!-- <param-value>#{configuracaoMB.tema}</param-value> -->
	</context-param>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<!-- Carregamento do Hibernate -->
	<listener>
		<listener-class>br.com.baiocchilousa.wg.util.HibernateContexto</listener-class>
	</listener>

</web-app>